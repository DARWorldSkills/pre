<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentPerfil"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="42dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="251dp"
                        android:layout_height="52dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/raleway_black_italic"
                        android:gravity="center"
                        android:text="@string/configuracion"
                        android:textAlignment="center"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="20sp"
                        tools:ignore="MissingConstraints" />

                </RelativeLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="103dp">

                    <ImageView
                        android:id="@+id/ImgPerfil"
                        android:layout_width="110dp"
                        android:layout_height="88dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/perfil"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <Button
                        android:id="@+id/btnCambiarI"
                        android:layout_width="54dp"
                        android:layout_height="58dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="92dp"
                        android:background="@drawable/pruebita"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="center"
                        android:textColor="@color/colorgris"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorAzuloscuro" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/raleway_black_italic"
                        android:gravity="center"
                        android:text="@string/datos"
                        android:textAlignment="center"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="20sp"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorAzuloscuro" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_light"
                        android:text="@string/nombres"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtNombrePerfil"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/raleway_light"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/raleway_light"
                        android:text="@string/apellidos"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtApellidosPerfil"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/raleway_light"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="39dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/raleway_light"
                        android:text="@string/Telefono"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/txttelefonoPerfil"
                        android:layout_width="188dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/colorPrimaryDark" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/raleway_light"
                        android:text="@string/Documento"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtdocumentoPerfil"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.075"
                        app:layout_constraintStart_toEndOf="@+id/textView6"
                        app:layout_constraintTop_toBottomOf="@+id/txttelefonoPerfil"
                        tools:ignore="MissingConstraints,NotSibling" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/raleway_light"
                        android:text="@string/Email"
                        android:textColor="@color/colorAzuloscuro"
                        android:textSize="16sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtCorreoPerfil"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/raleway_light"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAzuloscuro" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">


                    <Button
                        android:id="@+id/btnCambioCo"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:background="@color/colorAzuloscuro"
                        android:text="@string/cambiarcontraseña"
                        android:textColor="@color/colorgris"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAzuloscuro" />


                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorAzuloscuro"
                    android:text="@string/hecho"
                    android:textColor="#fff"
                    android:textStyle="normal|bold"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <!-- TODO: Update blank fragment layout -->

</android.support.constraint.ConstraintLayout>